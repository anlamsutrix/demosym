   {% extends "StudentBundle::layout.html.twig" %}

{% block title "Symfony - Demos" %}

{% block content %}
    <h1>Student</h1>
    <div style="float: left">
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id: </th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name: </th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Age: </th>
                <td>{{ entity.age }}</td>
            </tr>
            <tr>
                <th>Render: </th>
                <td>{{ entity.render }}</td>
            </tr>
            <tr>
                <th>School: </th>
                <td>{{ entity.school.name }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
            <li>
                <a href="{{ path('student') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('student_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
        </div>
        <div style="float: right;">
            <img src="/uploads/images/{{ entity.image }}" width="170" height="150">
            {% if (entity.brochure)%}
            <div><a href="{{ asset('uploads/brochures/' ~ entity.brochure) }}">View brochure (PDF)</a></div>
            {%endif%}
            </div>
{% endblock %}
