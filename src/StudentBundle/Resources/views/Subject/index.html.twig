   {% extends "StudentBundle::layout.html.twig" %}

{% block title "Symfony - Demos" %}

{% block content %}
    <h1>Subject list</h1>

    <table class="records_list" width="100%">
        <thead>
            <tr style="background: #E6E6E6; ">
                <th style="padding:3px 5px;">Id</th>
                <th>Name</th>
                <th>Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr  style="border-bottom: solid 1px #D3D3D3;">
                <td><a href="{{ path('subject_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.time }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('subject_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('subject_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <div class="navigation" style="float: right;">
                {{ knp_pagination_render(entities) }}
            </div>
        <ul>
        <li>
            <a href="{{ path('subject_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
